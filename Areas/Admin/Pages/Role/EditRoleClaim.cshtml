@page "/admin/role/edit-role-claim/{claimid}"
@model RazorWebApp.Admin.Role.EditRoleClaimModel
@{
    ViewData["Title"] = "Edit role claim";
}

<h2>@ViewData["Title"]</h2>

<hr>

<div class="row">
    <div class="col-sm-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label" asp-for="input.ClaimType"></label>
                <input class="form-control" asp-for="input.ClaimType" />
                <span class="text-danger" asp-validation-for="input.ClaimType"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="input.ClaimValue"></label>
                <input class="form-control" asp-for="input.ClaimValue" />
                <span class="text-danger" asp-validation-for="input.ClaimValue"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Update Claim" />
                <a asp-page="./Edit" asp-route-id="@Model.claim.RoleId" class="btn btn-secondary">Back</a>
                <input type="submit" class="btn btn-danger" asp-page-handler="Delete" value="Delete" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}